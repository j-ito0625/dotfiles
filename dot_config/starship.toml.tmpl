{{- /* ▼▼▼ 設定ロジック（ここは維持） ▼▼▼ */ -}}
{{- $main_bg := "#bb9af7" -}}
{{- $os_label := "LINUX" -}}

{{- if eq .chezmoi.os "windows" -}}
    {{- $main_bg = "#769ff0" -}}
    {{- $os_label = "WIN" -}}
{{- else if or (contains "microsoft" .chezmoi.kernel.osrelease) (contains "wsl2" .chezmoi.kernel.osrelease) -}}
    {{- $main_bg = "#e0af68" -}}
    {{- $os_label = "WSL" -}}
{{- end -}}
{{- /* ▲▲▲ ロジックここまで ▲▲▲ */ -}}

# ▼▼▼ format設定 ▼▼▼
# $custom を削除し、$hostname を追加しました
format = """
[ $os_label ](fg:#1a1b26 bg:{{ $main_bg }} bold)\
$directory\
[ ](fg:{{ $main_bg }} bg:#1d2230)\
$git_branch\
$git_status\
$hostname\
[ ](fg:#1d2230)\
\n$character
"""

right_format = """
$cmd_duration\
$username\
$time
"""

add_newline = true

# ▼▼▼ ホスト名設定 (標準機能) ▼▼▼
[hostname]
# SSH以外(Windows/WSL)でも常にホスト名を表示する
ssh_only = false
# 色設定
style = "fg:#e0af68 bg:#1d2230"
format = "[ $hostname ]($style)"
disabled = false

# ▼▼▼ その他設定 ▼▼▼
[username]
style_user = "white bold"
style_root = "black bold"
format = "user: [$user]($style) "
disabled = false

[fill]
symbol = " "

[directory]
style = "fg:#1a1b26 bg:{{ $main_bg }} bold"
truncation_length = 10
truncate_to_repo = false
truncation_symbol = "…/"
read_only = " LOCK "
read_only_style = "fg:#f7768e bg:#1a1b26"
format = "[ $path ]($style)[$read_only]($read_only_style)"

[git_branch]
symbol = "Git:"
style = "bg:#1d2230"
format = "[[ $symbol $branch ](fg:#769ff0 bg:#1d2230)]($style)"

[git_status]
style = "bg:#1d2230"
format = "[[($all_status$ahead_behind )](fg:#769ff0 bg:#1d2230)]($style)"

[cmd_duration]
min_time = 1
style = "fg:#e0af68"
format = "[$duration]($style)"

[time]
disabled = false
time_format = "%R"
format = "[[  TIME $time ](fg:#a0a9cb)]($style)"

[character]
success_symbol = "[>](bold green)"
error_symbol = "[>](bold red)"