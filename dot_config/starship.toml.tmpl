{{- /* ▼▼▼ 設定ロジック ▼▼▼ */ -}}
{{- $main_bg := "#bb9af7" -}}   {{- /* デフォルト(Linux): 紫 */ -}}
{{- $os_label := "LINUX" -}}    {{- /* デフォルト文字 */ -}}

{{- if eq .chezmoi.os "windows" -}}
    {{- $main_bg = "#769ff0" -}} {{- /* Windows: 青 */ -}}
    {{- $os_label = "WIN" -}}
{{- else if or (contains "microsoft" .chezmoi.kernel.osrelease) (contains "wsl2" .chezmoi.kernel.osrelease) -}}
    {{- $main_bg = "#e0af68" -}} {{- /* WSL: オレンジ */ -}}
    {{- $os_label = "WSL" -}}
{{- end -}}
{{- /* ▲▲▲ ロジックここまで ▲▲▲ */ -}}

# ▼ フォーマット設定
# $os_label (WIN/WSL) を先頭に太文字で表示します
format = """
[ $os_label ](fg:#1a1b26 bg:{{ $main_bg }} bold)\
$directory\
[ ](fg:{{ $main_bg }} bg:#1d2230)\
$git_branch\
$git_status\
$hostname\
[ ](fg:#1d2230)\
\n$character
"""

# 右側の表示（お好みで）
right_format = """
$cmd_duration\
$username\
$time
"""

add_newline = true

# ▼ ホスト名設定 (SSHのときだけ表示する設定)
[hostname]
ssh_only = true  # SSH接続時のみホスト名を表示
format = "[ $hostname ](fg:#e0af68 bg:#1d2230)"
disabled = false

[username]
style_user = "white bold"
style_root = "black bold"
format = "user: [$user]($style) "
disabled = false

[fill]
symbol = " "

[directory]
style = "fg:#1a1b26 bg:{{ $main_bg }} bold"
truncation_length = 10
truncate_to_repo = false
truncation_symbol = "…/"
read_only = " LOCK " # ここもアイコンをやめて文字に
read_only_style = "fg:#f7768e bg:#1a1b26"
format = "[ $path ]($style)[$read_only]($read_only_style)"

[aws]
disabled = true
[gcloud]
disabled = true

[git_branch]
symbol = "Git:" # アイコンをやめて文字に
style = "bg:#1d2230"
format = "[[ $symbol $branch ](fg:#769ff0 bg:#1d2230)]($style)"

[git_status]
style = "bg:#1d2230"
format = "[[($all_status$ahead_behind )](fg:#769ff0 bg:#1d2230)]($style)"

[cmd_duration]
min_time = 1
style = "fg:#e0af68"
format = "[$duration]($style)"

[time]
disabled = false
time_format = "%R"
format = "[[  TIME $time ](fg:#a0a9cb)]($style)"

[character]
# 入力欄の矢印
success_symbol = "[>](bold green)"
error_symbol = "[>](bold red)"

[custom.sparkles]
command = "echo ✨"
when = "true"
format = "$output"